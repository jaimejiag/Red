<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ficheros__actvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:text="Conexión HTTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/btn_conexionHTTP"
        android:layout_alignStart="@+id/btn_conexionAsincrona"
        android:layout_alignEnd="@+id/btn_conexionAsincrona" />

    <Button
        android:text="Conexión Asíncrona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_conexionHTTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/btn_conexionAsincrona" />

    <Button
        android:text="Conexión Volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/btn_conexionVolley"
        android:layout_below="@+id/btn_conexionAsincrona"
        android:layout_alignStart="@+id/btn_conexionAsincrona"
        android:layout_alignEnd="@+id/btn_conexionHTTP" />

    <Button
        android:text="Descarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btn_conexionVolley"
        android:id="@+id/btn_descarga"
        android:layout_alignEnd="@+id/btn_subida" />

    <Button
        android:text="Subida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_descarga"
        android:layout_marginTop="22dp"
        android:id="@+id/btn_subida"
        android:layout_alignStart="@+id/btn_conexionAsincrona"
        android:layout_alignEnd="@+id/btn_conexionAsincrona" />
</RelativeLayout>
